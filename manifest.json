{
  "manifest_version": 3,
  "name": "Active Tab Highlighter",
  "version": "1.3.34",
  "description": "Highlights the active tab with a visual indicator to make it easy to identify which tab you're viewing",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": ["tabs", "storage"],
  "host_permissions": ["<all_urls>"]
}
